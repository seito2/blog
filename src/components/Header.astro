---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { getUrlFromOwn } from "../modules/urlHelper";
---

<header>
  <h2>
    {SITE_TITLE}
  </h2>
  <nav>
    <HeaderLink href={getUrlFromOwn("/")}>Home</HeaderLink>
    <HeaderLink href={getUrlFromOwn("/blog")}>Blog</HeaderLink>
    <HeaderLink href={getUrlFromOwn("/about")}>About</HeaderLink>
    <HeaderLink href="https://twitter.com/seito34790484" target="_blank">Twitter</HeaderLink>
    <HeaderLink href="https://github.com/seito2" target="_blank">GitHub</HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
